# Create a sample terraform.tfvars for easy customization
aws_region         = "us-west-2"
environment        = "sentinel"
gateway_vpc_cidr   = "10.0.0.0/16"
backend_vpc_cidr   = "10.1.0.0/16"
gateway_cluster_name = "eks-gateway"
backend_cluster_name = "eks-backend"
eks_version        = "1.28"
node_instance_type = "t3.medium"
node_desired_size  = 2
node_min_size      = 2
node_max_size      = 4

tags = {
  Project     = "Sentinel-Split"
  Environment = "Production"
  ManagedBy   = "Terraform"
  Owner       = "DevSecOps-Team"
}
